<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- checkable+checked+pressed -->
    <item android:state_checkable="true" android:state_checked="true" android:state_pressed="true"
        android:drawable="@mipmap/expand_bt3_30x30"
        />

    <!-- checkable+pressed -->
    <item android:state_checkable="true" android:state_pressed="true"
        android:drawable="@mipmap/expand_bt4_30x30"
        />

    <!-- checkable+checked -->
    <item android:state_checkable="true" android:state_checked="true"
        android:drawable="@mipmap/expand_bt4_30x30"
        />

    <!-- checkable -->
    <item android:state_checkable="true" android:drawable="@mipmap/expand_bt3_30x30"/>

    <!-- pressed -->
    <item android:state_pressed="true" android:drawable="@mipmap/expand_bt4_30x30"  />

    <!-- default -->
    <item android:drawable="@mipmap/expand_bt3_30x30"/>

</selector>
