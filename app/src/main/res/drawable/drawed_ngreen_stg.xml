<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Bottom Shadow Darker Line-->

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="6dp" />

            <solid android:color="@android:color/holo_red_light" />
        </shape>
    </item>


    <!-- Main Content Gradient -->
    <item android:top="2dip" android:bottom="2dip" android:left="2dip" android:right="2dip">
        <shape android:shape="rectangle" android:dither="false" >
            <gradient
                android:startColor="@android:color/holo_green_dark"
                android:centerColor="@android:color/holo_green_light"
                android:endColor="@android:color/holo_green_light"
                android:type="linear"
                android:angle="90"/>
            <corners android:radius="4dip" />
        </shape>
    </item>

    <!-- Upper Shadow Dark Line -->
    <item android:top="2dip" android:bottom="2dip" android:left="2dip" android:right="2dip">
        <shape android:shape="rectangle" >
            <gradient
                android:centerX="0.98"
                android:centerY="0"
                android:startColor="#d7ffff"
                android:centerColor="@android:color/holo_green_light"
                android:endColor="#82d44f"
                android:type="linear"
                android:angle="90"/>
            <corners android:radius="6dip" />
        </shape>
    </item>

    <!-- Icon -->
    <item
        android:left="15dp"
        android:top="5dp"
        android:bottom="5dp">
        <bitmap android:src="@mipmap/settings_icon_large" android:gravity="left" android:alpha="0.5"/>
    </item>
</layer-list>