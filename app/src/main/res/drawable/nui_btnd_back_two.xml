<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true" >
        <layer-list>
            <item>
                <shape
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shape="oval">

                    <size android:width="70dp" android:height="70dp" />
                    <solid android:color="#4C4C4C" />

                </shape>
            </item>

            <item android:gravity="center"
                  android:width="50dp"
                  android:height="50dp">
                <bitmap android:src="@mipmap/nui_back_arrow" android:gravity="fill" />
            </item>
        </layer-list>
    </item>

    <!-- normal -->
    <item>
        <layer-list>
            <item>
                <shape
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shape="oval">
                    <size android:width="70dp" android:height="70dp" />

                    <gradient
                        android:endColor="#1c9844"
                        android:gradientRadius="45"
                        android:startColor="#1c9844"
                        android:type="linear" />
                </shape>
            </item>

            <item android:gravity="center"
                  android:width="50dp"
                  android:height="50dp">
                <bitmap android:src="@mipmap/nui_back_arrow" android:gravity="fill" />
            </item>
        </layer-list>
    </item>
</selector>

