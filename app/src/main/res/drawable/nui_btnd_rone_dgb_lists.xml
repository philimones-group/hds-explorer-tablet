<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true" >
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <corners android:radius="45dp" />
                    <solid android:color="#4C4C4C" />
                </shape>
            </item>

            <item
                android:left="25dp"
                android:top="5dp"
                android:bottom="5dp">
                <bitmap android:src="@mipmap/nui_lists_white_icon" android:gravity="left" />
            </item>
        </layer-list>
    </item>

    <!-- normal -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <corners android:radius="45dp" />
                    <gradient
                        android:angle="270"
                        android:gradientRadius="45"
                        android:centerX="35%"
                        android:centerY="50%"
                        android:startColor="@color/nui_color_dg_start"
                        android:endColor="@color/nui_color_dg_end"
                        android:type="linear"
                        />
                </shape>
            </item>

            <item
                android:left="25dp"
                android:top="5dp"
                android:bottom="5dp">
                <bitmap android:src="@mipmap/nui_lists_white_icon" android:gravity="left" />
            </item>
        </layer-list>
    </item>

</selector>
