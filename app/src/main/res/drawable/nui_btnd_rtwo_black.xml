<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- pressed -->
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="30dp" />
            <solid android:color="#4C4C4C" />
        </shape>
    </item>

    <!-- disabled -->
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <corners android:radius="30dp" />

                    <solid android:color="#40ff4444" />
                </shape>
            </item>

            <item android:top="2dip" android:bottom="2dip" android:left="2dip" android:right="2dip">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners android:radius="50dp" />
                    <gradient
                        android:angle="45"
                        android:startColor="#40000000"
                        android:endColor="#4004812E"
                        android:type="linear"
                        />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- normal -->
    <item android:top="2dp">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <corners android:radius="30dp" />

                    <solid android:color="@android:color/holo_red_light" />
                </shape>
            </item>

            <item android:top="2dip" android:bottom="2dip" android:left="2dip" android:right="2dip">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners android:radius="50dp" />
                    <gradient
                        android:angle="45"
                        android:startColor="@color/black"
                        android:endColor="@color/nui_color_blackgreen_end"
                        android:type="linear"
                        />
                </shape>
            </item>
        </layer-list>

    </item>

</selector>

