<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iconView"
        android:layout_width="@dimen/household_item_icon_width"
        android:layout_height="@dimen/household_item_icon_height"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="center"
        android:src="@mipmap/nui_household_red_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    
        <TextView
            android:id="@+id/txtHousename"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="left"
            android:text="Large Text"
            android:textColor="@color/nui_household_item_textcolor"
            android:textSize="@dimen/household_item_text_1_size"
            android:maxLines="1"
            android:ellipsize="end"/>
        
        <TextView
            android:id="@+id/txtHouseCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textColor="@color/nui_household_item_textcolor"
            android:textSize="@dimen/household_item_text_2_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtHeadLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/household_filter_head_label"
                android:textColor="@color/nui_household_item_textcolor"
                android:textSize="@dimen/household_item_text_3_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Medium Text"
                android:textColor="@color/nui_household_item_textcolor"
                android:textSize="@dimen/household_item_text_3_size"
                android:textStyle="bold"/>

        </LinearLayout>


        
    </LinearLayout>

    

</LinearLayout>
