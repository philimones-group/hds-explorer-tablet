<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iconView"
        android:layout_width="@dimen/household_item_icon_width"
        android:layout_height="@dimen/household_item_icon_height"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/nui_household_red_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    
        <TextView
            android:id="@+id/txtHousename"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="left"
            android:text="Large Text"
            android:textColor="@color/nui_household_item_textcolor"
            android:textStyle="bold"
            android:textSize="@dimen/household_item_text_1_size" />
        
        <TextView
            android:id="@+id/txtHouseCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textColor="@color/nui_household_item_textcolor"
            android:textSize="@dimen/household_item_text_2_size" />

        <TextView
            android:id="@+id/txtExtras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textColor="@color/nui_household_item_textcolor"
            android:textSize="@dimen/household_item_text_3_size"
            android:textStyle="bold"/>
        
    </LinearLayout>

    

</LinearLayout>
