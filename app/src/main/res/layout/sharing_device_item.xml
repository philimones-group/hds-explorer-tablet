<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal" >


    <ImageView
        android:id="@+id/iconView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left|center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/nui_sharing_device_red_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtItem1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:text="Large Text"
            android:textColor="#444"
            android:textStyle="bold"
            android:textSize="@dimen/member_item_text_1_size" />

        <TextView
            android:id="@+id/txtItem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textColor="#444"
            android:gravity="center_vertical"
            android:textSize="@dimen/member_item_text_2_size" />

        <TextView
            android:id="@+id/txtItem3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:text="Medium Text"
            android:textColor="#444"
            android:textSize="@dimen/member_item_text_3_size"
            android:textStyle="bold"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnItemInfo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/nui_btnd_sync_info_one"
        android:focusable="false"
        android:enabled="false"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/chkProcessed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:focusable="false"
        android:clickable="false"
        android:visibility="gone"
        />

</LinearLayout>
