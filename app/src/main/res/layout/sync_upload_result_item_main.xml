<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/syncItemMainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- item header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/nui_bottom_border">

            <TextView
                android:id="@+id/syncItemMainHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:paddingBottom="2dp"
                android:gravity="left|center_horizontal"
                android:text="Large Text"
                android:textStyle="bold"
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="#444" />

        </LinearLayout>

    </LinearLayout>

    <!-- info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingStart="18dp"
        android:orientation="horizontal"
        android:background="@drawable/nui_bottom_border">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="left|center_horizontal"
                android:text="@string/sync_upload_instance_id_lbl"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp"
                android:textColor="#444" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="left|center_horizontal"
                android:text="@string/sync_upload_instance_code_lbl"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp"
                android:textColor="#444" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtInstanceId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="@color/nui_color_text_green"
                android:text="uuid:01001-123123-132133"/>

            <TextView
                android:id="@+id/txtInstanceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="@color/nui_color_text_green"
                android:text="TXUS1990001"/>

        </LinearLayout>

    </LinearLayout>


    <!-- childs items layout -->
    <LinearLayout
        android:id="@+id/syncItemChildsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:paddingStart="18dp"
        android:orientation="vertical">

        <include layout="@layout/sync_result_item_child"/>

    </LinearLayout>

</LinearLayout>

