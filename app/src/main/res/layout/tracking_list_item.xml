<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_gravity="left|center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/followup_list_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtTrackListItemTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="left|center_horizontal"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:singleLine="true"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#444" />

        <TextView
            android:id="@+id/txtTrackListItemModule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp"
            android:textColor="#444" />

        <TextView
            android:id="@+id/txtTrackListItemDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="#444" />
        
    </LinearLayout>

    <org.philimone.hds.explorer.widget.CirclePercentageBar
        xmlns:androidx="http://schemas.android.com/apk/res/org.philimone.hds.explorer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:focusable="false"
        androidx:displayTextType="percentage"
        android:id="@+id/pbarTrackListItem"/>

</LinearLayout>
